<%= simple_form_for non_player_character, :html => {:class => 'form-horizontal' } do |f| %>
    <%= f.error_notification %>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>

    <div class="form-inputs">
      <%= f.input :codename %>
      <%= f.input :type, :collection => ["Company", "Person"] %>
      <%= f.input :name %>
    </div>
<% end %>
