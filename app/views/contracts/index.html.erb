<ul class="breadcrumb lead">
  <li class="active">Contracts<span class="divider"></li>
</ul>

<div class="well">
  <%= link_to "New", new_world_contract_path, class: 'btn btn-primary' %>
</div>

<table class="table table-striped">
  <thead>
    <th>world</th>
    <th>name</th>
  </thead>
  <tbody>
  <%- contracts.all.each do |contract| %>
    <tr>
      <td> <%= contract.world.name %> (id=<%= contract.world.id  %>) </td>
      <td><%= link_to "#{contract.contract_template.codename} (id=#{contract.id})", edit_world_contract_path(world_id: contract.world_id, id: contract.id) %></td>
    </tr>
  <% end %>
  </tbody>
</table>
