<ul class="breadcrumb lead">
  <li class="active">Logging Equipment</li>
</ul>

<div class="well">
  <%= link_to "New", new_logging_equipment_path, class: 'btn btn-primary' %>
</div>

<table class="table table-striped">
  <thead>
    <th>name</th>
    <th>world</th>
    <th>owner</th>
  </thead>
  <tbody>
  <%- logging_equipment_list.all.each do |equipment| %>
    <tr>
      <td><%= link_to equipment.name, edit_logging_equipment_path(equipment) %></td>
      <td><%= equipment.world.name %></td>
      <td><%= equipment.player.name if equipment.player %></td>
    </tr>
  <% end %>
  </tbody>
</table>
